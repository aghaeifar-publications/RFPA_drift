@article{Ganter2023,
author = {Ganter, Carl},
title = {Approximate B1+ scaling of the SSFP steady state},
journal = {Magnetic Resonance in Medicine},
volume = {89},
number = {6},
pages = {2264-2269},
keywords = {B1+$$ {B}_1^{+} $$, fingerprinting, relaxometry, SSFP, steady state},
