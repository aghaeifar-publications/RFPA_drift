volume = {71},
number = {1},
pages = {230-237},
keywords = {triple echo steady-state, relaxometry, fast imaging, T1, T2, quantification},
doi = {https://doi.org/10.1002/mrm.24659},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/mrm.24659},
eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1002/mrm.24659},
abstract = {Purpose Rapid imaging techniques have attracted increased interest for relaxometry, but none are perfect: they are prone to static (B0) and transmit (B1) field heterogeneities, and commonly biased by T2/T1. The purpose of this study is the development of a rapid T1 and T2 relaxometry method that is completely (T2) or partly (T1) bias-free. Methods A new method is introduced to simultaneously quantify T1 and T2 within one single scan based on a triple echo steady-state (TESS) approach in combination with an iterative golden section search. TESS relaxometry is optimized and evaluated from simulations, in vitro studies, and in vivo experiments. Results It is found that relaxometry with TESS is not biased by T2/T1, insensitive to B0 heterogeneities, and, surprisingly, that TESS-T2 is not affected by B1 field errors. Consequently, excellent correspondence between TESS and reference spin echo data is observed for T2 in vitro at 1.5 T and in vivo at 3 T. Conclusion TESS offers rapid T1 and T2 quantification within one single scan, and in particular B1-insensitive T2 estimation. As a result, the new proposed method is of high interest for fast and reliable high-resolution T2 mapping, especially of the musculoskeletal system at high to ultra-high fields. Magn Reson Med 71:230–237, 2014. © 2013 Wiley Periodicals, Inc.},
year = {2014}
}

@article{Sbrizzi2018,
title = {Fast quantitative MRI as a nonlinear tomography problem},
journal = {Magnetic Resonance Imaging},
volume = {46},
pages = {56-63},
year = {2018},
issn = {0730-725X},
doi = {https://doi.org/10.1016/j.mri.2017.10.015},
url = {https://www.sciencedirect.com/science/article/pii/S0730725X17302400},
author = {Alessandro Sbrizzi and Oscar van der Heide and Martijn Cloos and Annette van der Toorn and Hans Hoogduin and Peter R. Luijten and Cornelis A.T. {van den Berg}},
keywords = {MR-STAT, Quantitative MRI, Nonlinear tomography, MR fingerprinting, Large scale inversion},
abstract = {Quantitative Magnetic Resonance Imaging (MRI) is based on a two-steps approach: estimation of the magnetic moments distribution inside the body, followed by a voxel-by-voxel quantification of the human tissue properties. This splitting simplifies the computations but poses several constraints on the measurement process, limiting its efficiency. Here, we perform quantitative MRI as a one step process; signal localization and parameter quantification are simultaneously obtained by the solution of a large scale nonlinear inversion problem based on first-principles. As a consequence, the constraints on the measurement process can be relaxed and acquisition schemes that are time efficient and widely available in clinical MRI scanners can be employed. We show that the nonlinear tomography approach is applicable to MRI and returns human tissue maps from very short experiments.}
}


